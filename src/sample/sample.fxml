<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import com.sun.javafx.scene.control.skin.InputField?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <TextField fx:id="input" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4"/>

    <Button onAction="#clear" text="C" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

    <Button onAction="#add" text="+" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Button onAction="#subtract" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Button onAction="#divide" text="/" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <Button onAction="#multiply" text="*" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

    <Label fx:id="statusBar" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="5"/>
</GridPane>