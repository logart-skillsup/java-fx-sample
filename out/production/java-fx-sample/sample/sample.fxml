<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <TextField fx:id="input" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4"/>

    <Button text="=" onAction="#evaluate" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

    <Button text="+" onAction="#operation" id="add" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Button text="-" onAction="#operation" id="subtract" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Button text="*" onAction="#operation" id="multiply" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <Button text="/" onAction="#operation" id="divide" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

</GridPane>